<!doctype html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Administration page</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body ng-controller="AuthController as vm">
    <div class="page-bg"></div>
    <div class="container py-5 position-relative">
      <header class="mb-4 text-center">
        <h1 class="display-6 fw-semibold">Administration</h1>
      </header>

      <div class="status-card mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between">
          <div>
            <p class="mb-1 fw-semibold">Session</p>
            <p class="mb-0 text-muted" ng-if="!vm.user">Checking sessionâ€¦</p>
            <p class="mb-0 text-muted" ng-if="vm.user">
              Logged in as <strong>{{ vm.user.email }}</strong>
            </p>
          </div>
          <%- include('partials/nav') %>
        </div>
      </div>

      <div class="card shadow-sm mb-3" ng-if="vm.user">
        <div class="card-body d-flex flex-column flex-lg-row align-items-lg-center justify-content-between">
          <div>
            <h2 class="h6 mb-1">Appearance</h2>
            <p class="text-muted mb-0">Auto uses sunrise/sunset for your location.</p>
          </div>
          <button class="btn btn-outline-secondary mt-3 mt-lg-0" ng-click="vm.cycleTheme()">
            {{ vm.theme.buttonLabel }}
          </button>
        </div>
      </div>

      <div class="card shadow-sm" ng-if="vm.user">
        <div class="card-body">
          <h2 class="h5 mb-3">WebSocket Login</h2>
          <form ng-submit="vm.saveWsCredentials()" novalidate>
            <div class="mb-3">
              <label class="form-label">WS Login</label>
              <input
                type="text"
                class="form-control"
                ng-model="vm.wsCredentials.login"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label">WS Password</label>
              <input
                type="password"
                class="form-control"
                ng-model="vm.wsCredentials.password"
                required
              />
            </div>
            <button class="btn btn-primary" type="submit">
              Save credentials
            </button>
          </form>
        </div>
      </div>

      <div class="card shadow-sm mt-4" ng-if="vm.user">
        <div class="card-body">
          <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-3">
            <div>
              <h2 class="h5 mb-1">Pending accounts</h2>
              <p class="text-muted mb-0">Activate or delete newly created users.</p>
            </div>
            <button class="btn btn-outline-secondary mt-3 mt-lg-0" ng-click="vm.loadPendingUsers()">
              Refresh
            </button>
          </div>

          <div class="revives-status text-muted" ng-if="vm.pendingUsersLoading">
            Loading pending users...
          </div>
          <div class="revives-status text-muted" ng-if="!vm.pendingUsersLoading && !vm.pendingUsers.length">
            No pending accounts found.
          </div>

          <div class="table-responsive" ng-if="vm.pendingUsers.length">
            <table class="table table-sm table-hover align-middle mb-0">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Created</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="user in vm.pendingUsers track by user._id">
                  <td>{{ user.email }}</td>
                  <td>{{ user.createdAt | date:'medium' }}</td>
                  <td class="text-end">
                    <button class="btn btn-sm btn-success me-2" ng-click="vm.activateUser(user)">
                      Activate
                    </button>
                    <button class="btn btn-sm btn-outline-danger" ng-click="vm.deleteUser(user)">
                      Delete
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

    <%- include('partials/toast') %>
    <%- include('partials/logs-modal') %>

    <script src="/js/angular.min.js"></script>
    <script src="/js/idb-8.0.0.umd.js"></script>
    <script src="/js/logs-db.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
