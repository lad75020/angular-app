<!doctype html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AngularJS + Fastify Starter</title>
    <link rel="stylesheet" href="/js/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body ng-controller="AuthController as vm">
    <div class="page-bg"></div>
    <div class="container py-5 position-relative">
      <header class="mb-4 text-center">
        <h1 class="display-6 fw-semibold">AngularJS + Fastify Starter</h1>
        <p class="text-muted">Signup and login against a Fastify API.</p>
      </header>

      <div class="row g-4 justify-content-center">
        <div class="col-12 col-lg-5">
          <div class="card shadow-sm">
            <div class="card-body">
              <h2 class="h5 mb-3">Create an account</h2>
              <form ng-submit="vm.signup()" novalidate>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    ng-model="vm.signupForm.email"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    ng-model="vm.signupForm.password"
                    required
                  />
                </div>
                <button class="btn btn-primary w-100" type="submit">
                  Sign up
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-5">
          <div class="card shadow-sm">
            <div class="card-body">
              <h2 class="h5 mb-3">Log in</h2>
              <form ng-submit="vm.login()" novalidate>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    ng-model="vm.loginForm.email"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    ng-model="vm.loginForm.password"
                    required
                  />
                </div>
                <button class="btn btn-dark w-100" type="submit">
                  Log in
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="status-card mt-4">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between">
          <div>
            <p class="mb-1 fw-semibold">Session</p>
            <p class="mb-0 text-muted" ng-if="!vm.user">Not logged in.</p>
            <p class="mb-0 text-muted" ng-if="vm.user">
              Logged in as <strong>{{ vm.user.email }}</strong>
            </p>
          </div>
          <%- include('partials/nav') %>
        </div>
      </div>
    </div>

    <%- include('partials/toast') %>
    <%- include('partials/logs-modal') %>

    <script src="/js/angular.min.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
