<!doctype html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Revives</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body ng-controller="AuthController as vm">
    <div class="page-bg"></div>
    <div class="container py-5 position-relative">
      <header class="mb-4 text-center">
        <h1 class="display-6 fw-semibold">Revives</h1>
        <p class="text-muted">Daily or weekly counts for log 5410.</p>
      </header>

      <div class="status-card mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between">
          <div>
            <p class="mb-1 fw-semibold">Session</p>
            <p class="mb-0 text-muted" ng-if="!vm.user">Checking session…</p>
            <p class="mb-0 text-muted" ng-if="vm.user">
              Logged in as <strong>{{ vm.user.email }}</strong>
            </p>
          </div>
          <%- include('partials/nav') %>
        </div>
      </div>

      <div class="card shadow-sm" ng-if="vm.user">
        <div class="card-body">
          <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-3">
            <div>
              <h2 class="h5 mb-1">Revive activity</h2>
              <p class="text-muted mb-0">Counts of log 5410 from IndexedDB.</p>
            </div>
            <div class="revives-controls mt-3 mt-lg-0">
              <select
                class="form-select"
                ng-model="vm.revives.granularity"
                ng-change="vm.loadRevives(vm.revives.granularity)"
              >
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
              </select>
              <button class="btn btn-outline-secondary" ng-click="vm.loadRevives(vm.revives.granularity)">
                Refresh
              </button>
            </div>
          </div>

          <div class="revives-status text-muted" ng-if="vm.revives.loading">
            Loading revive data...
          </div>
          <div class="revives-status text-muted" ng-if="!vm.revives.loading && vm.revives.empty">
            No revive logs found. Click “Logs” to refresh IndexedDB.
          </div>
          <canvas id="revivesChart" width="900" height="360"></canvas>
        </div>
      </div>

    </div>

    <%- include('partials/toast') %>
    <%- include('partials/logs-modal') %>

    <script src="https://cdn.jsdelivr.net/npm/angular@1.8.3/angular.min.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
